<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Button name="xml_DetailsActionButtonTemplate" virtual="true" inherits="SecureUnitButtonTemplate, SecureHandlerStateTemplate, SecureHandlerEnterLeaveTemplate, SecureHandlerShowHideTemplate, SecureHandlerAttributeTemplate">
        <Size x="120" y="20"/>
		<Scripts>
			<OnLoad>
                DetailsActionButtonTemplate_OnLoad(self)
			</OnLoad>
        </Scripts>
        <Attributes>
            <!--Attribute name type value-->
            <Attribute name="_playername" type="string" value="self:Run(self:GetAttribute('secureOnEnter') or '')"/>
            <Attribute name="_playerguid" type="string" value="self:Run(self:GetAttribute('secureOnEnter') or '')"/>
            <Attribute name="_sessionid" type="number" value="self:Run(self:GetAttribute('sessionId') or 0)"/>
            <Attribute name="_sessiontype" type="number" value="self:Run(self:GetAttribute('sessionType') or 0)"/>
            <Attribute name="_onenter" type="string" value="self:Run(self:GetAttribute('secureOnEnter') or '')"/>
            <Attribute name="_onleave" type="string" value="self:Run(self:GetAttribute('secureOnLeave') or '')"/>

            <Attribute name="initialConfigFunction" type="string" value="print('hello world', GetTime())"/>
            
        </Attributes>        
    </Button>
</Ui>